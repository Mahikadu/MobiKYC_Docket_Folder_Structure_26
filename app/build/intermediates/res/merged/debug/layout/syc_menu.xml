<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:padding="25dp"
            android:src="@drawable/adstringo_logo" />

        <ImageView
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logouticon"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Video Compression set - Original"
        android:textColor="#58595B"

        android:textSize="20sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#000000">

    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdcdcd"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"

        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Docket Number :"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_appno"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:editable="true"
            android:ems="10"
            android:focusable="true"
            android:maxLines="1"
            android:padding="5dp"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_border"
        android:paddingLeft="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/imageCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_login"
            android:text="Record Video"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonRecording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonCompress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Compress"
            android:visibility="gone" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageCapture"
            android:layout_marginTop="30dp"
            android:background="@drawable/ripple_login"
            android:text="Upload"
            android:textAllCaps="false"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:text="Compressed video path : /AdstringOVideos/Output/ \n\nRecorded video path : /Pictures/MyCameraVideo/"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>



