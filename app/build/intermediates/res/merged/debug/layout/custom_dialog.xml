<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Info"
        android:background="#146533"
        android:textColor="#FFFFFF"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:weightSum="1">

    <RelativeLayout
        android:layout_weight="0.49"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textviewOriginTitle"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="Original"
            android:textSize="12dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#808080"/>

        <TextView
            android:id="@+id/textviewOriginPath"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Path"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textviewOriginTitle"/>
        <TextView
            android:id="@+id/textviewOriginSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textviewOriginPath"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textviewOriginResolution"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Resolution"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textviewOriginSize"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textviewOriginDpi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dpi"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textviewOriginResolution"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_weight=".02">
        </LinearLayout>
    <RelativeLayout
        android:layout_weight="0.49"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textviewCompressTitle"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="Compressed"
            android:textSize="12dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#808080"/>
        <TextView
            android:id="@+id/textviewCompressPath"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Path"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textviewCompressTitle"/>
        <TextView
            android:id="@+id/textviewCompressSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_below="@+id/textviewCompressPath"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textviewCompressResolution"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Resolution"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_below="@+id/textviewCompressSize"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/textviewCompressDpi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dpi"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_below="@+id/textviewCompressResolution"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ripple_login"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />


</LinearLayout>